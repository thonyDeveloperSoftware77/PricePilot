<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PricePilot</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PricePilot.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="containerUpNav">
            <div>
                <img src="~/img/logo.png" />
            </div>
            <div>
                <a><img src="~/img/Favorite.png" /></a>
                <a><img src="~/img/person.png" /></a>
                <a><img src="~/img/CircledMenu.png" /></a>
            </div>
        </div>
       
        <nav class="navbar">
            <div>
                <a asp-controller="Home" asp-action="Index">Inicio</a>
                <a asp-controller="Home" asp-action="Privacy">Juegos destacables</a>
                <a asp-page="/Index">Catalogo de Juegos</a>
            </div>
            <div class="containerSearch">

                <input type="text" />
                <button> <img src="~/img/Search.png" /></button>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PricePilot - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/ResponsiveSlides.js/1.53/responsiveslides.min.js"></script>

    <script src="~/js/site.js"></script>
    <script>

        $(function () {

            $(".rslides").responsiveSlides();

        });

    </script>
</body>
</html>
